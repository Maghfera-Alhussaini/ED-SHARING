
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Start -->
<div class="content">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">


                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <h3 class="heading mb-4">Let's talk about everything!</h3>
                        <p class="lead" style="color:black"><mark style="background-color:white"> Message us if you have any complaints or new ideas for improving ED, or if you want to join our team..</mark></p>

                       
                        <img src="~/img/coffee-3567_256.gif" alt="Image" class="img-fluid" style="width:300px" />

                    </div>
                    <div class="col-md-6">




                        <form class="mb-5" method="post" asp-controller="My" asp-action="Contact" id="contactForm" >
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control mt-4" name="name" id="name" placeholder="Your name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control mt-4 " name="email" id="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control mt-4 " name="subject" id="subject" placeholder="Subject">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <textarea class="form-control mt-4 h-50" name="message" id="message" cols="30" rows="7" placeholder="Write your message"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <input type="submit" value="Send Message" class="btn btn-primary mt-4 rounded-0 py-2 px-4" style="background-color: rgb(255, 187, 14); border:none">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>

                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success">
                            Your message was sent, thank you!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


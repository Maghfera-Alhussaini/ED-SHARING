                <a class="btn py-3 px-5 mt-2 " href="" style="background-color: rgb(255 187 14)">Read More</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Categories Start -->
<div class="container-xxl py-5 category">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">

            <h1 class="mb-5">Courses Topics</h1>
        </div>
        <div class="row g-3 mb-4">
            @foreach (var i in Model)
            {

                <div class="col-lg-4 col-md-12 wow zoomIn" data-wow-delay="0.1s">
                    <a class="position-relative d-block overflow-hidden" asp-controller="My" asp-action="Course" asp-route-id="@i.Id">
                        <img class="img-fluid h-100 w-100" src="~/topics/@Url.Content(i.image)" alt="" style=" border-radius: 50px">
                        <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                            <h5 class="m-0">@i.title</h5>

                        </div>
                    </a>
                </div>

            }
        </div>
    </div>
</div>









<div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">

        <h1 class="mb-5">Trendy Courses</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="projects">
                    <div class="row">
                        @foreach (var q in ViewBag.result)
                        {
                            <div class="col-lg-4 item architecture">
                                <div class="card">
                                    <div class="card-head">
                                        <img src="~/course/@Url.Content(q.image)" class="img-fluid card-img h-100" alt="" />
                                        <div class="card-img-overlay "><h2 style="color:white"> @q.Title</h2></div>

                                    </div>
                                    <div class="card-body text-center">
                                        <h4 class="title">BY: @q.teacher</h4>
                                        <a asp-action="CourseDescription" asp-route-id="@q.Id" class="btn btn-lg card-btn">
                                            see more
                                            <img src="~/img/eyes-4860_512 (1).gif" style="width:20px; height:20px"/>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        }


                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
 



<style>



    .flexbox {
        background: linear-gradient(to bottom, #0d1a26, #0d1a26 30%, #1f2c3b 60%, #424d5c);
        background-repeat: no-repeat;
        background-position-x: right;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .search {
        margin: 20px;
    }

        .search > h3 {
            font-weight: normal;
        }

        .search > h1,
        .search > h3 {
            color: white;
            margin-bottom: 15px;
            margin-right: 20px;
            text-shadow: 0 1px #0091c2;
        }

        .search > div {
            display: inline-block;
            position: relative;
            filter: drop-shadow(0 1px #0091c2);
        }

            .search > div:after {
                content: "";
                background: white;
                width: 4px;
                height: 20px;
                position: absolute;
                top: 22px;
                transform: rotate(135deg);
            }

            .search > div > input {
                color: white;
                font-size: 16px;
                background: transparent;
                width: 25px;
                height: 25px;
                padding: 10px;
                border: solid 3px white;
                outline: none;
                border-radius: 35px;
                transition: width 0.5s;
            }

                .search > div > input::placeholder {
                    color: #efefef;
                    opacity: 0;
                    transition: opacity 150ms ease-out;
                }

                .search > div > input:focus::placeholder {
                    opacity: 1;
                }

                .search > div > input:focus,
                .search > div > input:not(:placeholder-shown) {
                    width: 250px;
                }
  
</style>